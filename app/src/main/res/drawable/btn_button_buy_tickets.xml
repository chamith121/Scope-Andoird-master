<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:bottomRightRadius="10dp" android:bottomLeftRadius="10dp"
                android:topLeftRadius="10dp" android:topRightRadius="10dp"/>
            <stroke android:width="1dip" android:color="@color/blue_color" />
            <gradient android:angle="-90" android:startColor="@color/blue_color" android:endColor="@color/blue_color"  />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle"  >
            <corners android:bottomRightRadius="5dp" android:bottomLeftRadius="5dp"
                android:topLeftRadius="5dp" android:topRightRadius="5dp"/>
            <stroke android:width="1dip" android:color="#8890b5" />
            <solid android:color="#8890b5"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:bottomRightRadius="10dp" android:bottomLeftRadius="10dp"
                android:topLeftRadius="10dp" android:topRightRadius="10dp"/>
            <stroke android:width="1dip" android:color="@color/blue_color" />
            <solid android:color="@color/blue_color"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:bottomRightRadius="10dp" android:bottomLeftRadius="10dp"
                android:topLeftRadius="10dp" android:topRightRadius="10dp"/>
            <stroke android:width="1dip" android:color="@color/blue_color_dark" />
            <gradient android:angle="-90" android:startColor="@color/blue_color_dark" android:endColor="@color/blue_color_dark" />
        </shape>
    </item>

</selector>