<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dp"/>
            <stroke android:width="1dip" android:color="#576ed8" />
            <gradient android:angle="-90" android:startColor="#576ed8" android:endColor="#576ed8"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="6dp"/>
            <stroke android:width="1dip" android:color="#576ed8" />
            <solid android:color="#576ed8"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dp"/>
            <stroke
            android:width="1dp"
            android:color="@color/blue_color_dark_two" />
            <solid android:color="@color/transparent" />
            <padding
            android:left="1dp"
            android:right="1dp"
            android:bottom="1dp"
            android:top="1dp" />
        </shape>
    </item>

</selector>



