<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorPrimaryDark"
    tools:context="lk.archmage.scopecinemas.Register">





    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@null"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="70dp"
            android:fontFamily="@font/opensans_regular"
            android:gravity="center"
            android:text="REGISTER"
            android:textColor="@color/color_white" />

    </LinearLayout>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:fillViewport="false"
        app:layout_constraintBottom_toTopOf="@+id/registerBtn"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="26dp"
            android:paddingRight="26dp">

            <EditText
                android:id="@+id/txtFName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/line_color_three"
                android:fontFamily="@font/opensans_regular"
                android:inputType="text"
                android:hint="Enter Your First Name"
                android:textColor="@color/color_white"
                android:textColorHint="@color/line_color_three"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/txtLName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/line_color_three"
                android:fontFamily="@font/opensans_regular"
                android:inputType="text"
                android:hint="Enter Your Last Name"
                android:textColor="@color/color_white"
                android:textColorHint="@color/line_color_three"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/line_color_three"
                android:fontFamily="@font/opensans_regular"
                android:inputType="textEmailAddress"
                android:hint="Enter Your Email"
                android:textColor="@color/color_white"
                android:textColorHint="@color/line_color_three"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/txtMobile"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/line_color_three"
                android:fontFamily="@font/opensans_regular"
                android:hint="Enter Your Mobile ( 07X XXX XXXX )"
                android:inputType="number"
                android:maxLength="15"
                android:textColor="@color/color_white"
                android:textColorHint="@color/line_color_three"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/txtDob"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/line_color_three"
                android:editable="false"
                android:focusable="false"
                android:fontFamily="@font/opensans_regular"
                android:hint="Enter Your Date Of Birth"
                android:textColor="@color/color_white"
                android:textColorHint="@color/color_white"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/txtAddress"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/line_color_three"
                android:fontFamily="@font/opensans_regular"
                android:hint="Enter Your Address"
                android:inputType="text"
                android:textColor="@color/color_white"
                android:textColorHint="@color/line_color_three"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="textPassword"
                android:backgroundTint="@color/line_color_three"
                android:fontFamily="@font/opensans_regular"
                android:hint="Enter Your Password"
                android:textColor="@color/color_white"
                android:textColorHint="@color/line_color_three"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/txtRePassword"
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:layout_height="60dp"
                android:backgroundTint="@color/line_color_three"
                android:fontFamily="@font/opensans_regular"
                android:hint="Confirm Your Password"
                android:textColor="@color/color_white"
                android:textColorHint="@color/line_color_three"
                android:textSize="16dp" />

            <RadioGroup
                android:id="@+id/radioGroupGender"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/redioLable"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="Gender"
                    android:textColor="@color/color_white"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/redioMale"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/color_white"
                    android:buttonTint="@color/line_color_three"
                    android:checked="true"
                    android:tag="male"
                    android:text="Male"
                    android:textColor="@color/color_white" />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/color_white"
                    android:buttonTint="@color/line_color_three"
                    android:tag="female"
                    android:text="Female"
                    android:textColor="@color/color_white" />


            </RadioGroup>

        </LinearLayout>


    </ScrollView>

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/login_btn_bg"
        android:fontFamily="@font/opensans_regular"
        android:text="Register Now"
        android:textColor="@color/color_white"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout1"
        tools:layout_editor_absoluteX="94dp" />
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/opensans_regular"
            android:gravity="center_vertical"
            android:text="Already have have an Account ? "
            android:textColor="@color/color_white" />

        <TextView
            android:id="@+id/btnSignIn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/opensans_regular"
            android:gravity="center_vertical"
            android:text="SIGN IN"
            android:textColor="@color/color_white" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>