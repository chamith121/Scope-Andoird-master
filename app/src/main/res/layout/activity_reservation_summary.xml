<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/semi_white_background"
    android:orientation="vertical"
    tools:context=".ReservationSummary">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBarReservationSummery"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/titleTV"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginRight="65dp"
                        android:fontFamily="@font/opensans_semibold"
                        android:gravity="center_vertical"
                        android:text="RESERVATION SUMMARY"
                        android:textColor="@color/color_white"
                        android:textSize="16sp" />

                </LinearLayout>


            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rounded_corner_layout">

                    <RelativeLayout
                        android:layout_width="125dp"
                        android:layout_height="match_parent">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/layout_dark_blue">

                            <ImageView
                                android:id="@+id/movieImageIV"
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ttb_no_image_two"
                                android:paddingRight="17dp"/>

                        </android.support.v7.widget.CardView>

                        <TextView
                            android:id="@+id/timerTv"
                            android:layout_width="match_parent"
                            android:layout_height="26dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="9dp"
                            android:background="@drawable/text_view_round_left_under"
                            android:fontFamily="@font/opensans_semibold"
                            android:gravity="center"
                            android:text="9.10"
                            android:textColor="@color/color_white"
                            android:textSize="13sp" />


                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/one"
                        android:layout_width="125dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_toEndOf="@+id/one"
                        android:background="@drawable/rounded_corner_layout_right_side"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/movieNameTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/opensans_bold"
                            android:text="Jumanji: The Next Level"
                            android:textColor="@color/color_white"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/theaterNameTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/opensans_regular"
                            android:text="DOLBY ATMOS"
                            android:textColor="@color/color_white"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/theaterCityTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/opensans_regular"
                            android:text="COLOMBO CITY CENTER"
                            android:textColor="@color/color_white"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/movieDateTimeTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/opensans_regular"
                            android:text="26th Dec 2019, 07.30 PM"
                            android:textColor="@color/color_white"
                            android:textSize="15sp" />

                    </LinearLayout>

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rounded_corner_layout"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/opensans_bold"
                            android:text="Number of seats"
                            android:textColor="@color/color_white"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/opensans_bold"
                            android:text="Seat Number"
                            android:textColor="@color/color_white"
                            android:textSize="13sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/seatsCountTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/opensans_bold"
                            android:text="5"
                            android:textColor="@color/color_white"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/seatsNameTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_toEndOf="@+id/seatsCountTv"
                            android:fontFamily="@font/opensans_bold"
                            android:gravity="right"
                            android:text="K7, K8, K9"
                            android:textColor="@color/color_white"
                            android:textSize="25sp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/foodItemLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rounded_corner_layout"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/opensans_bold"
                            android:text="Product &amp; Quantity"
                            android:textColor="@color/color_white"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/opensans_bold"
                            android:text="Price"
                            android:textColor="@color/color_white"
                            android:textSize="13sp" />

                    </RelativeLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/msgTv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/opensans_light"
                            android:gravity="center"
                            android:text="No beverages data available."
                            android:textColor="@color/color_white"
                            android:textSize="15sp"
                            android:visibility="gone" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/concessionListRV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clipToPadding="false"
                            android:scrollbars="vertical"
                            android:scrollbarSize="0dp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rounded_corner_layout"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/totalTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/opensans_bold"
                            android:text="Total"
                            android:textColor="@color/color_white"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/totalAmountTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_toEndOf="@+id/totalTv"
                            android:fontFamily="@font/opensans_bold"
                            android:gravity="right"
                            android:text="Rs. 1,275/-"
                            android:textColor="@color/color_white"
                            android:textSize="25sp" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/youtube_player_view"
                    android:background="@color/blue_color_semi_dark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_semibold"
                        android:paddingLeft="10dp"
                        android:text="SELECT PAYMENT MODE"
                        android:textColor="@color/text_color_four"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/linear_layout"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/line_color"
                        android:layerType="software" />

                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="130dp"
                        android:layout_height="80dp"
                        android:src="@drawable/visa_mastercard"
                        android:scaleType="centerCrop"/>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/chkAndroid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:buttonTint="#000000"
                        android:checked="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoLink="web"
                        android:linksClickable="true"
                        android:text="Agree to Terms &amp; Conditions"
                        android:textColor="@color/color_black"
                        android:fontFamily="@font/opensans_regular"
                        android:textSize="12sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_marginBottom="20dp"
                        android:id="@+id/payBtn"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_button_proceed"
                        android:fontFamily="@font/opensans_bold"
                        android:text="PAY NOW"
                        android:textColor="@color/color_white"
                        android:textSize="15sp">

                    </Button>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>