<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="315dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/color_white"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/theaterImageIV"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:background="@drawable/ttb_no_image"/>

            <LinearLayout
                android:layout_marginRight="20dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/thaterNameIV"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/theater_name"/>

                <TextView
                    android:id="@+id/theaterNameTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Liberty By Scope Cinema"
                    android:layout_gravity="center_vertical"
                    android:textSize="14sp"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="@color/text_color_one"/>

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>