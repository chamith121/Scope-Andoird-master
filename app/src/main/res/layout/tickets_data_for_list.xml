<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutTicket"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/clickBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/ticket_1" />


            <TextView
                android:id="@+id/theaterNameMt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:fontFamily="@font/opensans_regular"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="#7a7977"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/movieNameMt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:fontFamily="@font/opensans_regular"
                android:paddingLeft="20dp"
                android:paddingTop="2dp"
                android:paddingRight="20dp"
                android:textColor="#45484d"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dateTimeTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:fontFamily="@font/opensans_light"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:text="Date &amp; Time"
                android:textColor="#aeafb1"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                <TextView
                    android:id="@+id/movieDateMt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:textColor="#45494c"
                    android:textSize="14sp" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/movieShowTimeMt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:textColor="#45494c"
                    android:textSize="14sp"  />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/movieTicketsCountTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:paddingTop="5dp"
                        android:gravity="center"
                        android:paddingRight="20dp"
                        android:textColor="#45494c"
                        android:textSize="15sp"  />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/ticket_2" />

        </LinearLayout>

        <LinearLayout
            android:background="@color/color_white"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:scaleType="fitEnd"
                android:src="@drawable/divider_x" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/availabilityLayout"
        android:layout_width="55dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="#009900"
        android:orientation="vertical">

        <TextView
            android:id="@+id/availabilityText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/opensans_light"
            android:gravity="center"
            android:text="Active"
            android:textColor="@color/color_white"
            android:textSize="9sp" />

    </LinearLayout>


</RelativeLayout>